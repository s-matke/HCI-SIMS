<Window x:Class="Bolnica.LekarPocetna"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica"
        mc:Ignorable="d"
        Title="LekarPocetna" Height="450" Width="800" Background="#FFE2D5D5">
    <Grid x:Name="AppointmentForm" Margin="10,10,0,0">
        <Button Content="Make an appointment" HorizontalAlignment="Left" Margin="24,24,0,0" VerticalAlignment="Top" Height="50" Width="240" Background="#FF85BBE2" Foreground="#FF8F0909" FontSize="17" FontFamily="Elephant" Click="Button_Click"/>
        <DataGrid x:Name="MedicalAppointmentView" HorizontalAlignment="Center" Height="172" Margin="0,104,0,0" VerticalAlignment="Top" Width="532">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Patient" Binding="{Binding Patient.Id}"/>
                <DataGridTextColumn Header="Room" Binding="{Binding room.Id}"/>
                <DataGridTextColumn Header="Doctor" Binding="{Binding doctor.Id}"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="delete" Click="delete_Click" Content="Delete">
                                
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
                
        </DataGrid>
        <Button Content="Prikaz tabele" HorizontalAlignment="Left" Height="32" Margin="429,49,0,0" VerticalAlignment="Top" Width="102" Click="Button_Click_1" RenderTransformOrigin="2.605,0.866"/>


    </Grid>
</Window>
